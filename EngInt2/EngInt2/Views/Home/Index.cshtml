@model EngInt2.Models.InformacoesViewModel

@{
    ViewData["Title"] = "Página inicial";
}


<h2>Informações dos Sensores</h2>
<hr />

    <div class="environment_conditions_container">

        <div class="environment_conditions">
            <p>Id:</p>
            <p>Temperature:</p>
            <p>Umidade relativa do ar:</p>
            <p>Umidade do solo:</p>
        </div>
        @await Html.PartialAsync("_SensorInfo", Model)
        <p></p>

    </div>


<h2>LEDs</h2>
<hr />


<div class="_container">
    <div class="buttons_commands">

        <div class="commandButton">
            <p class="color-component-w">Sistema de Exaustão (LED Branco)</p>
            Status:<button id="btn_w">@Html.DisplayFor(model => model.Status1)</button>
        </div>

        <div class="commandButton">
            <p class="color-component-r">Sistema de Iluminação (LED Vermelho)</p>


            <p>Digite aqui o intervalo de tempo para ocorrer a iluminação:</p>
            <label for="tempoLigado">Ligado:</label>
            <input type="number" id="tempoLigado" name="tempoLigado" /><br />

            <label for="tempoDesligado">Desligado:</label>
            <input type="number" id="tempoDesligado" name="tempoDesligado" /><br />


            <input type="submit" value="Salvar" id="Salvar_tempo" />


            <p id="mensagemTempoOk"></p>

            <p></p>
            <p></p>
            <p></p>
            Status:<button id="btn_r">@Html.DisplayFor(model => model.Status3)</button>
        </div>

        <div class="commandButton">
            <p class="color-component-g">Sistema de Ventilação (Ventoinha)</p>
            <label for="temp">Digite aqui a temperatura mínima para iniciar a ventilação:</label>
            <input type="number" id="temp" name="temp" /><br />
            <input type="submit" value="Salvar" id="Salvar_temp" />
            <p id="mensagemTempOk"></p>
        </div>

        <div>
            <p class="color-component-y">Sistema de Irrigação (LED Amarelo)</p>
            <label for="umi">Digite aqui a umidade mínima para iniciar a irrigação:</label>
            <input type="number" id="umi" name="umi" /><br />
            <input type="submit" value="Salvar" id="Salvar_umi" />
            <p id="mensagemUmiOk"></p>
        </div>



    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/atualizaInformacoes.js"></script>
<script src="~/js/comandos.js"></script>

